<!DOCTYPE html>
<html lang="pt">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>editing</title>
    <link rel="stylesheet" href="/css/main.css">
    <%- include('../includes/font-awsome.ejs') %>
</head>

<body>

    <%- include('../includes/navbar.ejs')%>
            <% for(let user of data) {%>
                <div class="modal modal-align">
                    <div class="modal-content">

                        <h1 class="title-modal" style="color: rgb(22, 160, 224);"><i class="fa-regular fa-rotate"></i> REGISTO</h1>
                        <form class="form" action="/update/<%=user.id_user%>" method="post">
                            <input type="hidden" value="<%=user.id_user%>" name="id_user">
                            <input type="hidden" name="_method" value="put">
                            <div class="form-group">
                                <label class="form-label" for="name" id="name">Nome</label>
                                <input class="form-control" type="text" name="name" placeholder="Digite seu nome"
                                    value="<%=user.name%>">
                            </div>
                            <div class="form-group">
                                <label class="form-label" for="email" id="email">E-mail</label>
                                <input class="form-control" type="email" name="email" placeholder="Digite seu email"
                                    value="<%=user.email%>">
                            </div>
                            <div class="form-group">
                                <label class="form-label" for="password" id="password">Password</label>
                                <input class="form-control" type="password" name="password"
                                    placeholder="Digite sua palavra-passe" value="<%=user.password%>">
                            </div>
                            <button type="submit" class="btn-form">Actualizar</button>
                            <a class="btn-cancelar" href="/admin/users">Cancelar</a>
                        </form>
                    </div>
                </div>
                <%}%>
        

                            <%- include('../includes/footer.ejs')%>
</body>

</html>